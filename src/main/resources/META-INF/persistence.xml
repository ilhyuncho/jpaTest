        <properties>
            <!-- H2 데이터베이스 드라이버 및 설정 -->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="webuser"/>
            <property name="javax.persistence.jdbc.password" value="abcd1234"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/jpaTest"/>

            <!-- 테이블 자동 생성 -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!--  데이터베이스 방언 사용 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!-- 실행되는 SQL 을 보여줌 -->
            <property name="hibernate.show_sql" value="true" />
            <!-- 실행되는 SQL 을 이쁘게 보여줌 -->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- 키 생성 전략 사용-->
            <property name="hibernate.id.new_generator_mapping" value="true" />

        </properties>
    </persistence-unit>

</persistence>
